.title{
    font-size:52rpx;
    margin:20rpx 0;
    text-align:center;
}
.line{
    display: flex;
    align-items: center;
}
.author{
  font-size:24rpx;
  color:#333;
  flex:1;
  text-align: right;
  margin-right:20rpx;
}
.content{
  margin: 40rpx;
  padding: 20rpx;
  word-break:break-word;
  font-size:34rpx;
}
.time{
  font-size:24rpx;
  color:#333;
  flex:1;
  text-align: left;
  margin-left:20rpx;
}
.praise{
  margin: 0 40rpx;
}
.comment{
  margin: 0 40rpx;
}
.praise image, .comment image{
    width: 44rpx;
    height: 44rpx;
    margin-right: 10rpx;
}
.input-area{
  display: flex;
  align-items: center;
  padding:20rpx;
}
.input-area input{
  flex:1;
  border-bottom:1px solid #eee;
  height:90rpx;
}
.placeholder{
  line-height: 90rpx;
}

.comments{
  background-color: #edece8;
  margin: 20rpx;
  border-radius: 10rpx;
}
.comment-item{
  font-size:28rpx;
  padding:10rpx 40rpx;
  margin:10rpx;
}
.person{
  color:#398eff;
}